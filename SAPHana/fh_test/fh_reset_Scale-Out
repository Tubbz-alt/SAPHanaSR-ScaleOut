#primSite="ROT"
#secnSite="WDF"
#primList="cisbwa009 cisbwa010 cisbwa011 cisbwa012"
#secnList="cisbwa014 cisbwa015 cisbwa016 cisbwa017"
#primRole_cisbwa011="standby"
#primRole_cisbwa012="standby"
#secnRole_cisbwa016="standby"
